

<p id="notice"><%= notice %></p>

<h2><%= t :user_manage%></h2>

<table class="table table-bordered">
  <thead>
  <tr>
    <th><%= t :user_name%></th>
    <th><%= t :user_email%></th>
    <th><%= t :user_type%></th>


    <th colspan="3"><%=t :operation%></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.user_name %></td>
        <td><%= user.email %></td>
        <td>
          <% if user.active == true %>
              <%= t :active %>

          <% elsif user.active == false %>
              <%= t :not_active %>
          <% end %>
        </td>

        <td><%= link_to "#{t('edit')}", edit_user_path(user) %></td>
        <td><%= link_to "#{t('delete')}", user, method: :delete, data: { confirm: '你确定要删除该用户吗?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @users %>

<br>

<div class="new"><%= link_to "#{t('new_user')}", new_user_path %></div>


